#include <unistd.h>

void ft_is_negative(int n)
{
	char a;
	char b;

	a = 'N';
	b = 'P';
	if (n >= 0)
	{
		ft_putchar(b);
	}
	else
	{
		ft_putchar(a);
	}
}
